    <div id="text-overlay"></div>

    <script>
        let scene, camera, renderer, starGeo, stars, sadFace;
        const countDisplay = document.getElementById('count-num');
        const textOverlay = document.getElementById('text-overlay');
        let displayedCount = 0;

        function init() {
            scene = new THREE.Scene();
            camera = new THREE.PerspectiveCamera(60, window.innerWidth / window.innerHeight, 1, 1000);
            camera.position.z = 100;
            camera.position.y = -50;
            camera.rotation.x = 0.5;

            renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            document.body.appendChild(renderer.domElement);

            const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
            scene.add(ambientLight);
            
            // Sad Face Geometry (Substitute for 3D Heart)
            const geometry = new THREE.SphereGeometry(20, 32, 32);
            const material = new THREE.MeshPhongMaterial({ color: 0x0099ff, shininess: 100, wireframe: true });
            sadFace = new THREE.Mesh(geometry, material);
            sadFace.position.set(0, 15, -30);
            scene.add(sadFace);

            // Particles
            starGeo = new THREE.BufferGeometry();
            let positions = [];
            for(let i=0; i<3000; i++) {
                positions.push(Math.random()*600-300, Math.random()*600-300, Math.random()*600-300);
            }
            starGeo.setAttribute('position', new THREE.Float32BufferAttribute(positions, 3));
            let starMaterial = new THREE.PointsMaterial({ color: 0x00ccff, size: 0.7, transparent: true });
            stars = new THREE.Points(starGeo, starMaterial);
            scene.add(stars);

            animate();
        }

        function animate() {
            let pos = starGeo.getAttribute('position');
            for(let i=0; i<3000; i++) {
                let y = pos.getY(i) - 0.8;
                if(y < -300) y = 300;
                pos.setY(i, y);
            }
            pos.needsUpdate = true;
            
            sadFace.rotation.y += 0.01;
            sadFace.rotation.z += 0.005;

            renderer.render(scene, camera);
            requestAnimationFrame(animate);
        }

        const messages = [
            "I AM SO SORRY ðŸ™‡â€â™‚ï¸", "PLEASE FORGIVE ME ðŸ™", "MY MISTAKE ðŸ˜”", "I WAS WRONG âŒ",
